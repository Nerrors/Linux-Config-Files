sudo apt-get update && sudo apt-get upgrade -y

	# Minimal Installation:
sudo apt-get install -y git locate neofetch htop conky rofi gedit gparted vlc

	# Full Installation:
sudo apt-get install -y git locate neofetch htop conky rofi gedit gparted vlc meld arduino virtualbox chromium obs-studio pcmanfm nitrogen keepassxc shellcheck stacer

	# Aditional Packages
sudo apt-get install -y kdenlive bleachbit pass variety lxappearance qt5ct grub-customizer

	# CLI Utilities/Tools
sudo apt-get install -y cmatrix htop neofetch git locate tldr ranger trash-cli ncdu figlet lolcat

	# Flatpak Packages (from Flathub)
sudo apt-get install flatpak
flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo

flatpak install flathub de.haeckerfelix.Shortwave
flatpak run de.haeckerfelix.Shortwave

